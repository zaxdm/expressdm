<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient"
    tools:context=".HomeActivity">

    <!-- Barra superior fija -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Widget.Expresdm.TopAppBar"
        android:background="?attr/colorSurface"
        android:elevation="6dp"
        android:padding="8dp"
        android:title="DM"
        app:titleCentered="true"
        app:navigationIcon="@android:drawable/ic_menu_myplaces"
        app:navigationIconTint="?attr/colorOnSurface"
        app:titleTextColor="?attr/colorOnSurface"
        app:popupTheme="@style/ThemeOverlay.Material3.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Guía al 50% de la altura para limitar el mapa a media pantalla -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/halfGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Mapa que muestra la ubicación actual del usuario -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/halfGuide"
        tools:ignore="MissingConstraints" />

    <!-- Contenido informativo bajo el mapa -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/halfGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/sectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tráfico pesado cerca de UPN"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:paddingBottom="8dp" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorFullWidth="false"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="?attr/colorOnSurface"
                app:tabTextColor="@color/black"
                android:paddingBottom="8dp" />

            <!-- Contenido: Autobuses -->
            <LinearLayout
                android:id="@+id/tabAutobusesContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rutas cercanas"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp" />

                <!-- Item Ruta 101 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Expresdm.Small"
                        app:srcCompat="@drawable/ruta_cercana" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ruta 101"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Av. América Sur - Av. Mansiche"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Micros favoritos"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp" />

                <!-- Item Micro 202 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/bus_favotity"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Expresdm.Small" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Micro 202"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Av. Larco - Av. España"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Próximas llegadas"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp" />

                <!-- Item Bus 303 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/nex_llegada"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Expresdm.Small" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bus 303"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Av. Los Incas - Av. Pumacahua"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Contenido: Eventos Locales (placeholder) -->
            <LinearLayout
                android:id="@+id/tabEventosContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eventos cercanos"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sin datos por ahora"
                    android:textColor="@color/surface_variant_light" />
            </LinearLayout>

            <!-- Contenido: Social (placeholder) -->
            <LinearLayout
                android:id="@+id/tabSocialContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reportes de usuarios"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sin datos por ahora"
                    android:textColor="@color/surface_variant_light" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Botón flotante de lupa para buscar rutas -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Buscar rutas"
        app:layout_constraintBottom_toBottomOf="@id/mapView"
        app:layout_constraintEnd_toEndOf="@id/mapView"
        android:layout_margin="16dp"
        app:srcCompat="@android:drawable/ic_menu_search"
        app:tint="@android:color/white"
        app:useCompatPadding="true"
        app:rippleColor="@color/indigo_700"
        android:backgroundTint="@color/violet_500" />

</androidx.constraintlayout.widget.ConstraintLayout>